@model IEnumerable<hotel.Models.Supplier>

@{
    ViewBag.Title = "suppreport";
}

<h2>المورد</h2>

@using (Html.BeginForm("suppreport", "Supplier", FormMethod.Get))
{
    @Html.AntiForgeryToken()

    @Html.DropDownList("id", (SelectList)ViewBag.CompanyId, "Select Name", new { @class = "form-control" })
    <input type="submit" value="Search" class="btn btn-primary" />
}
@if (Model != null && Model.Any())
{
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.sup_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.sup_phone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.type_of_service)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.date_of_recive)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.name_of_mandob)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.sup_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.sup_phone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.type_of_service)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.date_of_recive)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.name_of_mandob)
        </td>
    </tr>
}

</table>
}